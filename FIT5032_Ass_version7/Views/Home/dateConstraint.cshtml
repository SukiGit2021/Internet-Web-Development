
@{
    ViewBag.Title = "Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Calendar</h2>

<div id="calendar"></div>

@section Scripts {
    <link href="~/Content/fullcalendar.min.css" rel="stylesheet" />
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/fullcalendar.min.js"></script>
    <script>
        var events = [
            {
                title: 'example2',
                start: '2021-10-06',
                end: '2021-10-08',
                overlap: false,
                rendering: 'background',
                color: '#ff9f89'
            },
            {
                title: 'SweetHome-break',
                start: '2021-10-06',
                end: '2021-10-08'
            }
        ];

        var event2 = {
            "title": 'Example',
            "start": '@ViewBag.eventDate',
            daysOfWeek:[1,2,3,4]
        };
        console.log("res2", event2.start);
        events.push(event2);
        $("#calendar").fullCalendar({
            locale: 'au',
            plugins: ['interaction', 'dayGrid', 'timeGrid'],
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek'
            },
            defaultDate: '2021-10-22',
            businessHours: true, // display business hours
            editable: true,// can be false to close edit function
            events: events,
            dayClick: function (date, allDay, jsEvent, view) {
                var d = new Date(date);
                var m = moment(d).format("YYYY-MM-DD");
                m = encodeURIComponent(m);
                var uri = "/Home/dateConstraint?date=" + m;
                $(location).attr('href', uri);
            }
        });
    </script>
}